<h1>Sign up</h1>

<%= form_for(@user) do |f| %>
 <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Confirmation" %><br />
    <%= f.password_field :password_confirmation %>
  </div>

<div class="field">
		<%= f.label :city, "I live in the greater area of.." %>
		<%= f.select :city, [['Austin'],['Atlanta'],['Boston'],['DC'],['NYC'],['Philadelphia'],['Richmond'],['Wilmington']] %>
</div>

<div class="field">
		<%= f.label :bio, "40 char. Public Bio" %><br />
		<%= f.text_area :bio, :placeholder => "'EXAMPLE: avid cooker, street baller, magician, NBA fan, banker, etc'", :rows=>4, :cols=>40 %><small><small>40 character max</small></small>
		
</div>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

