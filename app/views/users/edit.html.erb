<h1>Edit user</h1>

<%= form_for(@user) do |f| %>
<%= render 'shared/error_messages', :object => f.object %>
<div class="field">
	<%= f.label :name %><br />
	<%= f.text_field :name %>
	</div>
<div class="field">
		<%= f.label :city, "I live in the greater area of.." %>
		<%= f.select :city, [['Austin'],['Atlanta'],['Boston'],['DC'],['NYC'],['Philadelphia'],['Richmond'],['Wilmington']] %>
</div>

<div class="field">
		<%= f.label :bio, "40 char. Public Bio" %><br />
		<%= f.text_area :bio, :placeholder => "'EXAMPLE: avid cooker, street baller, magician, NBA fan, banker, etc'", :rows=>4, :cols=>40 %><small><small>40 character max</small></small>
		
</div>
<div class="field">
    <%= f.label :password, "(Change or Confirm Original Password)" %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Confirm Above Password" %><br />
    <%= f.password_field :password_confirmation %>
  </div>
<div class="actions">
	<%= f.submit "Update" %>
	</div>

<% end %>


<div>
<%= gravatar_for @user %>
<a href="http://gravatar.com/emails">change</a>
</div>
